<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings_account">
	    <EditTextPreference
	            android:key="username"
	            android:title="@string/settings_username"
	            />
	    <EditTextPreference
	            android:key="password"
	            android:title="@string/settings_password"
	            android:password="true"
	            />	
	    <EditTextPreference
	            android:key="server"
	            android:title="Server"
	            />	
	    <EditTextPreference
	            android:key="port"
	            android:title="Port"
	            />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_options">
		<CheckBoxPreference
			android:key="wlan"
			android:title="@string/settings_wlan"
			android:summary="@string/settings_check" />
		<CheckBoxPreference
			android:key="3g"
			android:title="@string/settings_3g"
			android:summary="@string/settings_check" />
		<ListPreference
			android:key="pref"
			android:title="@string/settings_pref"
		    android:entries="@array/pref_display_values"
		    android:entryValues="@array/pref_values"
		    android:dialogTitle="@string/settings_pref" />
		<CheckBoxPreference
			android:key="par"
			android:title="@string/settings_par"
			android:summary="@string/settings_par2"  />
    </PreferenceCategory>
	<PreferenceScreen android:title="@string/settings_advanced_options">
		<PreferenceCategory android:title="@string/settings_advanced_options">
	        <EditTextPreference
	            android:key="minedge"
	            android:title="@string/settings_minedge"
	            android:hint="4"
	        />
	        <EditTextPreference
	            android:key="maxpoll"
	            android:title="@string/settings_maxpoll"
	            android:hint="1"
	        />
	        <EditTextPreference
	            android:key="prefix"
	            android:title="@string/settings_prefix"
	        />
	       	<EditTextPreference
	            android:key="excludepat"
	            android:title="@string/settings_excludepat"
	        />
			<CheckBoxPreference
				android:key="pos"
				android:title="@string/settings_pos"
				android:summary="@string/settings_pos2" />
	       	<EditTextPreference
	            android:key="posurl"
	            android:title="@string/settings_posurl"
	            android:hint="http://pbxes.org/name"
	        />
	        <org.sipdroid.sipua.ui.SipRingtonePreference
	        	android:key="sipringtone"
	        	android:title="@string/settings_sipringtone"
	        	android:summary="@string/sipringtone_summary"
	        	android:dialogTitle="@string/sipringtone_title"
	        	android:persistent="false"
	        	android:ringtoneType="ringtone"
	        /> 
	    </PreferenceCategory>    
    </PreferenceScreen>  
</PreferenceScreen>
